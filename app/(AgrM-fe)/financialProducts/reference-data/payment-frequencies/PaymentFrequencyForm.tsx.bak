'use client';
import React from 'react';
import { InputText } from 'primereact/inputtext';
import { InputNumber } from 'primereact/inputnumber';
import { InputTextarea } from 'primereact/inputtextarea';
import { Checkbox } from 'primereact/checkbox';
import { PaymentFrequency } from './PaymentFrequency';

interface PaymentFrequencyFormProps {
    paymentFrequency: PaymentFrequency;
    handleChange: (e: React.ChangeEvent<HTMLInputElement | HTMLTextAreaElement>) => void;
    handleNumberChange: (name: string, value: number | null) => void;
    handleCheckboxChange: (name: string, checked: boolean) => void;
}

const PaymentFrequencyForm: React.FC<PaymentFrequencyFormProps> = ({
    paymentFrequency,
    handleChange,
    handleNumberChange,
    handleCheckboxChange
}) => {
    return (
        <div className="p-fluid">
            <div className="surface-100 p-4 mb-4">
                <h5>Basic Information</h5>
                <div className="grid">
                    <div className="col-12 md:col-6">
                        <label htmlFor="code">Code *</label>
                        <InputText
                            id="code"
                            name="code"
                            value={paymentFrequency.code}
                            onChange={handleChange}
                            required
                            maxLength={20}
                        />
                    </div>
                    <div className="col-12 md:col-6">
                        <label htmlFor="paymentsPerYear">Payments Per Year *</label>
                        <InputNumber
                            id="paymentsPerYear"
                            value={paymentFrequency.paymentsPerYear}
                            onValueChange={(e) => handleNumberChange('paymentsPerYear', e.value)}
                            min={1}
                            max={365}
                        />
                    </div>
                    <div className="col-12 md:col-6">
                        <label htmlFor="name">Name *</label>
                        <InputText
                            id="name"
                            name="name"
                            value={paymentFrequency.name}
                            onChange={handleChange}
                            required
                            maxLength={100}
                        />
                    </div>
                    <div className="col-12 md:col-6">
                        <label htmlFor="nameFr">Nom (FR) *</label>
                        <InputText
                            id="nameFr"
                            name="nameFr"
                            value={paymentFrequency.nameFr}
                            onChange={handleChange}
                            required
                            maxLength={100}
                        />
                    </div>
                    <div className="col-12 md:col-6">
                        <label htmlFor="description">Description</label>
                        <InputTextarea
                            id="description"
                            name="description"
                            value={paymentFrequency.description || ''}
                            onChange={handleChange}
                            rows={3}
                        />
                    </div>
                    <div className="col-12 md:col-6">
                        <label htmlFor="descriptionFr">Description (FR)</label>
                        <InputTextarea
                            id="descriptionFr"
                            name="descriptionFr"
                            value={paymentFrequency.descriptionFr || ''}
                            onChange={handleChange}
                            rows={3}
                        />
                    </div>
                    <div className="col-12 md:col-6">
                        <div className="field-checkbox mt-4">
                            <Checkbox
                                inputId="isActive"
                                checked={paymentFrequency.isActive}
                                onChange={(e) => handleCheckboxChange('isActive', e.checked || false)}
                            />
                            <label htmlFor="isActive">Active</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    );
};

export default PaymentFrequencyForm;
